  <Application.Views>
    <Ribbon>
      <!-- Application Menu -->
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="AppMenu">
          <ApplicationMenu.RecentItems>
            <RecentItems CommandName="RecentFiles" MaxCount="16" EnablePinning="false"/>
          </ApplicationMenu.RecentItems>

          <MenuGroup Class="StandardItems">
            <Button CommandName="phototool_HOME_CONNECT"/>
            <Button CommandName="phototool_HOME_SETTINGS"/>
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="phototool_PREV_IMAGES_SHOW"/>
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="wtl_APP_EXIT"/>
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>

      <!-- Help button -->
      <Ribbon.HelpButton>
        <HelpButton CommandName="wtl_APP_ABOUT" />
      </Ribbon.HelpButton>

      <!-- QAT (Quick Access Toolbar) -->
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="QAT">
          <QuickAccessToolbar.ApplicationDefaults>
            <Button CommandName="phototool_HOME_CONNECT"/>
            <Button CommandName="phototool_PREV_IMAGES_SHOW"/>
          </QuickAccessToolbar.ApplicationDefaults>
        </QuickAccessToolbar>
      </Ribbon.QuickAccessToolbar>

      <Ribbon.Tabs>
        <Tab CommandName="TabHome">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="GroupHome" Size="Large"/>
              </ScalingPolicy.IdealSizes>
            </ScalingPolicy>
          </Tab.ScalingPolicy>

          <Group CommandName="GroupHome" SizeDefinition="TwoButtons">
            <Button CommandName="phototool_HOME_CONNECT"/>
            <Button CommandName="phototool_HOME_SETTINGS"/>
          </Group>

          <Group CommandName="GroupPhotoModes" SizeDefinition="NineButtons">
            <Button CommandName="phototool_PHOTO_MODE_NORMAL"/>
            <Button CommandName="phototool_PHOTO_MODE_HDR"/>
            <Button CommandName="phototool_PHOTO_MODE_PANO" />
            <Button CommandName="phototool_PHOTO_MODE_HDR_PANO" />
            <Button CommandName="phototool_PHOTO_MODE_TIMELAPSE" />
            <Button CommandName="phototool_PHOTO_MODE_PHOTOSTACK" />
            <Button CommandName="phototool_PHOTO_MODE_SCRIPTING" />
            <Button CommandName="phototool_PHOTO_MODE_DEVICE_PROPERTIES" />
            <Button CommandName="phototool_PHOTO_MODE_IMAGE_PROPERTIES" />
          </Group>

          <Group CommandName="GroupViews" SizeDefinition="ThreeButtons">
            <Button CommandName="phototool_VIEWFINDER_SHOW"/>
            <Button CommandName="phototool_PREV_IMAGES_SHOW"/>
            <Button CommandName="wtl_VIEW_RIBBON"/>
          </Group>
        </Tab>

        <Tab CommandName="TabPreviousImages" ApplicationModes="1">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="GroupPreviousImagesExit" Size="Large"/>
                <Scale Group="GroupPreviousImagesNavigation" Size="Large"/>
                <Scale Group="GroupPreviousImagesActions" Size="Large"/>
              </ScalingPolicy.IdealSizes>
            </ScalingPolicy>
          </Tab.ScalingPolicy>

          <Group CommandName="GroupPreviousImagesExit" SizeDefinition="OneButton" ApplicationModes="1">
            <Button CommandName="phototool_PREV_IMAGES_EXIT"/>
          </Group>

          <Group CommandName="GroupPreviousImagesNavigation" SizeDefinition="TwoButtons" ApplicationModes="1">
            <Button CommandName="phototool_PREV_IMAGES_PREV"/>
            <Button CommandName="phototool_PREV_IMAGES_NEXT"/>
          </Group>

          <Group CommandName="GroupPreviousImagesActions" SizeDefinition="TwoButtons" ApplicationModes="1">
            <Button CommandName="phototool_PREV_IMAGES_OPEN_FOLDER"/>
            <Button CommandName="phototool_PREV_IMAGES_EDIT"/>
          </Group>
        </Tab>

      </Ribbon.Tabs>

      <!-- Contextual tabs-->
      <Ribbon.ContextualTabs>
        <!-- Contextual tab "Camera" -->
        <TabGroup CommandName="TabGroupContextCamera">
          <Tab CommandName="TabContextCamera">
            <Group CommandName="GroupCameraRelease" SizeDefinition="OneButton">
              <Button CommandName="phototool_CAMERA_RELEASE"/>
            </Group>
            <Group CommandName="GroupCameraSettings" SizeDefinition="OneButton">

              <DropDownGallery CommandName="phototool_CAMERA_SETTINGS_SAVETO"
                               HasLargeItems="false"
                               TextPosition="Right">
                <DropDownGallery.MenuLayout>
                  <VerticalMenuLayout
                    Gripper="None"
                    Rows="3" />
                </DropDownGallery.MenuLayout>
              </DropDownGallery>

              <!-- Button CommandName="phototool_CAMERA_SHOOTING_MODE"/>
              <Button CommandName="phototool_CAMERA_SETTINGS_AV"/>
              <Button CommandName="phototool_CAMERA_SETTINGS_TV"/>
              <Button CommandName="phototool_CAMERA_SETTINGS_EXPOSURE"/>
              <Button CommandName="phototool_CAMERA_SETTINGS_ISO"/>
              <Button CommandName="phototool_CAMERA_SETTINGS_SAVETO"/>
              <Button CommandName="phototool_CAMERA_SETTINGS_IMAGE_FORMAT"/ -->
            </Group>
          </Tab>
        </TabGroup>

        <!-- Contextual tab "Viewfinder" -->
        <TabGroup CommandName="TabGroupContextViewfinder">
          <Tab CommandName="TabContextViewfinder">
            <Tab.ScalingPolicy>
              <ScalingPolicy>
                <ScalingPolicy.IdealSizes>
                  <Scale Group="GroupViewfinderViewfinder" Size="Large"/>
                  <Scale Group="GroupViewfinderAdjust" Size="Large"/>
                  <Scale Group="GroupViewfinderZoom" Size="Large"/>
                  <Scale Group="GroupViewfinderShow" Size="Large"/>
                </ScalingPolicy.IdealSizes>
              </ScalingPolicy>
            </Tab.ScalingPolicy>

            <Group CommandName="GroupViewfinderViewfinder" SizeDefinition="OneButton">
              <Button CommandName="phototool_VIEWFINDER_SHOW"/>
            </Group>
            <Group CommandName="GroupViewfinderAdjust" SizeDefinition="TwoButtons">
              <Button CommandName="phototool_VIEWFINDER_AUTO_FOCUS"/>
              <Button CommandName="phototool_VIEWFINDER_AUTO_WB"/>
            </Group>
            <Group CommandName="GroupViewfinderZoom" SizeDefinition="TwoButtons">
              <Button CommandName="phototool_VIEWFINDER_ZOOM_OUT"/>
              <Button CommandName="phototool_VIEWFINDER_ZOOM_IN"/>
            </Group>
            <Group CommandName="GroupViewfinderShow" SizeDefinition="TwoButtons">
              <DropDownGallery CommandName="phototool_VIEWFINDER_LINES_MODE"
                               HasLargeItems="false"
                               TextPosition="Right">
                <DropDownGallery.MenuLayout>
                  <VerticalMenuLayout
                    Gripper="None"
                    Rows="3" />
                </DropDownGallery.MenuLayout>
              </DropDownGallery>
              <Button CommandName="phototool_VIEWFINDER_SHOW_OVEREXPOSED"/>
              <!-- Button CommandName="phototool_VIEWFINDER_SHOW_OVERLAY_IMAGE"/ -->
              <!-- Button CommandName="phototool_VIEWFINDER_HISTOGRAM"/ -->
            </Group>
          </Tab>
        </TabGroup>

        <!-- Contextual tab "Scripting" -->
        <TabGroup CommandName="TabGroupContextScripting">
          <Tab CommandName="TabContextScripting">
            <Tab.ScalingPolicy>
              <ScalingPolicy>
                <ScalingPolicy.IdealSizes>
                  <Scale Group="GroupScriptingScript" Size="Large"/>
                  <Scale Group="GroupScriptingDebug" Size="Large"/>
                  <Scale Group="GroupScriptingEdit" Size="Large"/>
                </ScalingPolicy.IdealSizes>
              </ScalingPolicy>
            </Tab.ScalingPolicy>

            <Group CommandName="GroupScriptingScript" SizeDefinition="TwoButtons">
              <Button CommandName="phototool_SCRIPTING_OPEN"/>
              <Button CommandName="phototool_SCRIPTING_RELOAD"/>
            </Group>
            <Group CommandName="GroupScriptingDebug" SizeDefinition="TwoButtons">
              <Button CommandName="phototool_SCRIPTING_RUN"/>
              <Button CommandName="phototool_SCRIPTING_STOP"/>
            </Group>
            <Group CommandName="GroupScriptingEdit" SizeDefinition="OneButton">
              <Button CommandName="phototool_SCRIPTING_EDIT"/>
            </Group>
          </Tab>
        </TabGroup>
      </Ribbon.ContextualTabs>

    </Ribbon>
  </Application.Views>
</Application>
